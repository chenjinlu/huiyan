<view class='page'>
  <view class='page_hd' style='position:relative'>
  <image wx:if="{{details[0].suoluetu}}" mode="aspectFit" src="https://wx.ahifeng.com/Public/Uploads/{{details[0].suoluetu}}" class="cover" mode="widthFix"></image>
  <view style='position:absolute;bottom:50px;left:10px;color:white;font-family:Microsoft Yahei;'>{{details[0].intro}}</view>
  </view>
  <view class='page_bd'>
    <view class="navbar"> 
    <text wx:for="{{showbar}}" data-idx="{{index}}" class="item {{currentTab==index ? 'active' : ''}}" wx:key="unique" bindtap="showbarTap">{{item}}      </text> 
    </view>   
  </view>
  <view class="btn-submit">
		<!-- <button class="btn-block btn-orange" bindtap="applySubmit">主页</button> -->
    <button class="btn-block btn-orange" bindtap="applySubmit">上传作品</button>
    <!-- <navigator class="btn-block btn-orange" url='' >上传作品</navigator> -->
	</view>
</view>